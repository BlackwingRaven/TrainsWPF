<Window x:Class="TrainsWPF.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SignUp" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="Назад" HorizontalAlignment="Left" Height="20" Width="50" Margin="10"/>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Номер телефона:" />
            <TextBox />
            <Label Content="Имя:"/>
            <TextBox />
            <Label Content="Фамилия:"/>
            <TextBox />
            <Label Content="Электронная почта:"/>
            <TextBox />
            <Label Content="Пароль:"/>
            <TextBox />
        </StackPanel>
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Зарегистрироваться" Margin="10" Height="30" Width="150"/>
            <Button Content="Уже есть аккаунт?" Height="24" Width="120"/>
        </StackPanel>
    </Grid>
</Window>
