<Window x:Class="TrainsWPF.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SignUp" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" x:Name="Back" Content="Назад" HorizontalAlignment="Left" Height="20" Width="50" Margin="10" Click="Back_Click"/>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Номер телефона:" />
            <TextBox x:Name="telNum"/>
            <Label Content="Имя:"/>
            <TextBox x:Name="firstName"/>
            <Label Content="Фамилия:"/>
            <TextBox x:Name="lastName"/>
            <Label Content="Электронная почта:"/>
            <TextBox x:Name="email"/>
            <Label Content="Пароль:"/>
            <TextBox x:Name="password"/>
        </StackPanel>
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="SignUp" Content="Зарегистрироваться" Margin="10" Height="30" Width="150" Click="SignUp_Click"/>
            <Button x:Name="LogIn" Content="Уже есть аккаунт?" Height="24" Width="120" Click="LogIn_Click"/>
        </StackPanel>
    </Grid>
</Window>
