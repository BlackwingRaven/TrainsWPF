<Window x:Class="TrainsWPF.TicketSearchStarting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TicketSearchStarting" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" x:Name="Exit" Content="X" Height="20" Width="20" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5" Click="Exit_Click"/>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
            <Button x:Name="LogIn" Content="Авторизация" Width="100" Height="30" Click="LogIn_Click"/>
            <Button x:Name="SignUp" Content="Регистрация" Width="100" Height="30" Margin="10" Click="SignUp_Click"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Откуда:" Height="36"/>
            <TextBox x:Name="Origin" Height="30" Width="100"/>
            <Label Content="Куда:" Height="36"/>
            <TextBox x:Name="Destination" Height="30" Width="100"/>
        </StackPanel>
        <Button Grid.Row="2" x:Name="TicketSearch" Content="Поиск билетов" Width="120" Height="42" Click="TicketSearch_Click"/>
    </Grid>
</Window>
